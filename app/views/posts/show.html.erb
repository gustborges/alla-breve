<div class="col-sm-11 col-xs-12 blog-content">
  <% if @post.photo.attached? %>
    <div>
    <%= cl_image_tag @post.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
  <% end %>
  <small><%= @post.created_at.strftime('%b %d, %Y') %></small>
  <h1 class="post-title"><%= @post.title %></h1>
  <h2 class="post-subtitle"><%= @post.subtitle %></h2>
  <div><%= @post.rich_body %></div>
</div>
